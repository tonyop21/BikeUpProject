
@{
    ViewData["Title"] = "Dashboard";
}

<h1>DashBoard</h1>


<div class="body-container">
    <div class="container-fluid h-100" style="align-content:center; align-items:center; margin-bottom: 50px">
        <h4 style="margin-bottom: 25px; margin-left: 50px; display:block;">Top 3 Bikes:</h4>
        <div class="row h-100" style="display: flex; justify-content: center">
            <div class="card-deck mb-3 text-center" style="margin-bottom: 100px; float:none; ">
                <div class="card h-100 mb-4 box-shadow stick-out" style="width:33.33%; float:left; ">
                    <div class="card-body h-100 align-items-center d-flex justify-content-center">
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="silver" class="bi bi-trophy-fill" viewBox="0 0 16 16" style="display:inline-block; margin-bottom: 10px">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BikeUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/30ba898e7b.js" crossorigin="anonymous"></script>
</head>
<body >
    <header class="blue-nav sticky-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm blue-nav navbar-light border-bottom box-shadow mb-3" >
                <div class="container">
                    <a asp-controller="Bikes" asp-action="Dashboard"><i class="fas fa-motorcycle fa-4x" style="margin-right:20px; color:white"></i></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @*<li class="nav-item hvr-bounce-to-top">
                                <a class="nav-link " style="color:white" asp-area="" asp-controller="Bikes" asp-action="Dashboard">DashBoard</a>
                            </li>*@
                            <li class="nav-item hvr-bounce-to-bottom">
                                <a class="nav-link " style="color:white" asp-area="" asp-controller="Bikes" asp-action="Index">Bikes</a>
                            </li>
                            <li class="nav-item hvr-bounce-to-top">
                                <a class="nav-link " style="color:white" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                            </li>
                            @*<li class="nav-item nav-item-darken hvr-bounce-to-bottom">
                                <a class="nav-link text-light " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>*@
                            @*<li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Bikes" asp-action="RentBike">Rent Bike</a>
                                </li>*@
                            @*<li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Bikes" asp-action="ReturnBike">Return Bike</a>
                                </li>*@
                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:white">
            &copy; 2021 - BikeUp - <a style="color:white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

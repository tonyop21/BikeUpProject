<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BikeUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body >
    <header class="blue-nav sticky-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm blue-nav navbar-light border-bottom box-shadow mb-3" >
                <div class="container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="75" height="75" fill="white" class="bi bi-bicycle" viewBox="0 0 16 16" style="margin-right: 20px;">
                        <path d="M4 4.5a.5.5 0 0 1 .5-.5H6a.5.5 0 0 1 0 1v.5h4.14l.386-1.158A.5.5 0 0 1 11 4h1a.5.5 0 0 1 0 1h-.64l-.311.935.807 1.29a3 3 0 1 1-.848.53l-.508-.812-2.076 3.322A.5.5 0 0 1 8 10.5H5.959a3 3 0 1 1-1.815-3.274L5 5.856V5h-.5a.5.5 0 0 1-.5-.5zm1.5 2.443-.508.814c.5.444.85 1.054.967 1.743h1.139L5.5 6.943zM8 9.057 9.598 6.5H6.402L8 9.057zM4.937 9.5a1.997 1.997 0 0 0-.487-.877l-.548.877h1.035zM3.603 8.092A2 2 0 1 0 4.937 10.5H3a.5.5 0 0 1-.424-.765l1.027-1.643zm7.947.53a2 2 0 1 0 .848-.53l1.026 1.643a.5.5 0 1 1-.848.53L11.55 8.623z" />
                    </svg>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item hvr-bounce-to-top">
                                <a class="nav-link " style="color:white" asp-area="" asp-controller="Bikes" asp-action="Dashboard">DashBoard</a>
                            </li>
                            <li class="nav-item hvr-bounce-to-bottom">
                                <a class="nav-link " style="color:white" asp-area="" asp-controller="Bikes" asp-action="Index">Bikes</a>
                            </li>
                            <li class="nav-item hvr-bounce-to-top">
                                <a class="nav-link " style="color:white" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                            </li>
                            @*<li class="nav-item nav-item-darken hvr-bounce-to-bottom">
                                <a class="nav-link text-light " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>*@
                            @*<li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Bikes" asp-action="RentBike">Rent Bike</a>
                                </li>*@
                            @*<li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Bikes" asp-action="ReturnBike">Return Bike</a>
                                </li>*@
                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:white">
            &copy; 2021 - BikeUp - <a style="color:white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
